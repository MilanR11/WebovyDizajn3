@{
    ViewData["Title"] = "Domov";
}

<!-- Hero sekcia v makers štýle (bez fotiek) -->
<section class="hero hero-maker position-relative overflow-hidden mb-5">
    <div class="container position-relative">
        <div class="row align-items-center py-5">
            <div class="col-lg-7 text-white">
                <h1 class="display-4 fw-bold mb-3">Makerslab Inventory</h1>
                <p class="lead mb-4">Jednoduchá správa inventára, pôžičiek a používateľov v jednom prehľadnom rozhraní.</p>
                <div class="d-flex gap-3 flex-wrap">
                    <a class="btn btn-accent btn-lg" asp-controller="Inventars" asp-action="Index">Prejsť na inventár</a>
                    <a class="btn btn-outline-light btn-lg" asp-controller="Home" asp-action="Privacy">Zistiť viac</a>
                </div>
            </div>
        </div>
    </div>
    <svg class="hero-wave" viewBox="0 0 1440 100" preserveAspectRatio="none" aria-hidden="true">
        <path fill="currentColor" d="M0,64L80,53.3C160,43,320,21,480,21.3C640,21,800,43,960,69.3C1120,96,1280,128,1360,144L1440,160L1440,0L1360,0C1280,0,1120,0,960,0C800,0,640,0,480,0C320,0,160,0,80,0L0,0Z"></path>
    </svg>
    
</section>

<!-- Sekcia s kartami a ikonami (bez fotiek) -->
<section class="container pb-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card card-dark h-100 shadow-sm card-zoom">
                <div class="card-body">
                    <div class="icon-circle mb-3">
                        <!-- Ikona náradia (kľúč) -->
                        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                            <path d="M13.6 7.05a4.5 4.5 0 1 0-6.55 6.16l-4.27 4.27a1 1 0 0 0 1.41 1.41l1.06-1.06 1.06 1.06a1 1 0 0 0 1.41 0l1.06-1.06 1.06 1.06a1 1 0 0 0 1.41 0l4.27-4.27a4.5 4.5 0 0 0-1.23-7.6z" stroke="currentColor" stroke-width="1.5" fill="none"/>
                        </svg>
                    </div>
                    <h5 class="card-title">Majte poriadok v technike</h5>
                    <p class="card-text text-light">Rýchly prehľad o dostupnosti, detailoch a stave zariadení. Vyhľadávanie a filtrovanie jedným klikom.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-dark h-100 shadow-sm card-zoom">
                <div class="card-body">
                    <div class="icon-circle mb-3" style="color: var(--accent-2)">
                        <!-- Ikona času/kalendára -->
                        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                            <circle cx="12" cy="12" r="8" stroke="currentColor" stroke-width="1.5"/>
                            <path d="M12 8v5l3 2" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                        </svg>
                    </div>
                    <h5 class="card-title">Prehľadná evidencia pôžičiek</h5>
                    <p class="card-text text-light">Sledujte kto má čo požičané, odkedy dokedy, a pridávajte poznámky k výpožičkám.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-dark h-100 shadow-sm card-zoom">
                <div class="card-body">
                    <div class="icon-circle mb-3" style="color: #9cff57">
                        <!-- Ikona tímu -->
                        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                            <circle cx="8" cy="8" r="3" stroke="currentColor" stroke-width="1.5"/>
                            <circle cx="16" cy="8" r="3" stroke="currentColor" stroke-width="1.5"/>
                            <path d="M3 19c0-3 3-5 5-5s5 2 5 5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                            <path d="M11 15.5c.8-.6 1.8-1 3-1 2 0 5 2 5 4.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                        </svg>
                    </div>
                    <h5 class="card-title">Pripravené pre tím</h5>
                    <p class="card-text text-light">Role a oprávnenia pre správcov aj používateľov. Jednoduchá správa prístupov.</p>
                </div>
            </div>
        </div>
    </div>
</section>
