<!DOCTYPE html>
<html lang="sk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MakerslabInventory</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MakerslabInventory.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Jemná animovaná vrstva s ikonami v pozadí (nezavadzia, len dekorácia) -->
    <div class="bg-icons-overlay" aria-hidden="true">
        <!-- Ikony sú zámerne jednoduché SVG a s nízkou krytím -->
        <span class="bg-icon i1">
            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <!-- kľúč (náradie) -->
                <path d="M13.6 7.05a4.5 4.5 0 1 0-6.55 6.16l-4.27 4.27a1 1 0 0 0 1.41 1.41l1.06-1.06 1.06 1.06a1 1 0 0 0 1.41 0l1.06-1.06 1.06 1.06a1 1 0 0 0 1.41 0l4.27-4.27a4.5 4.5 0 0 0-1.23-7.6z" stroke="currentColor" stroke-width="1.2"/>
            </svg>
        </span>
        <span class="bg-icon i2">
            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <!-- hodiny -->
                <circle cx="12" cy="12" r="8" stroke="currentColor" stroke-width="1.2"/>
                <path d="M12 8v5l3 2" stroke="currentColor" stroke-width="1.2" stroke-linecap="round"/>
            </svg>
        </span>
        <span class="bg-icon i3">
            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <!-- tím (dve hlavy) -->
                <circle cx="8" cy="9" r="3" stroke="currentColor" stroke-width="1.2"/>
                <circle cx="16" cy="9" r="3" stroke="currentColor" stroke-width="1.2"/>
                <path d="M3 20c0-3 3-5 5-5s5 2 5 5" stroke="currentColor" stroke-width="1.2" stroke-linecap="round"/>
                <path d="M11 16c.8-.6 1.8-1 3-1 2 0 5 2 5 5" stroke="currentColor" stroke-width="1.2" stroke-linecap="round"/>
            </svg>
        </span>
        <span class="bg-icon i4">
            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <!-- jednoduché ozubené koleso (symbolické) -->
                <circle cx="12" cy="12" r="4.5" stroke="currentColor" stroke-width="1.2"/>
                <path d="M12 2.5v3M12 18.5v3M2.5 12h3M18.5 12h3M5 5l2.2 2.2M16.8 16.8L19 19M5 19l2.2-2.2M16.8 7.2 19 5" stroke="currentColor" stroke-width="1.2" stroke-linecap="round"/>
            </svg>
        </span>
        <span class="bg-icon i5">
            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <!-- kocka (3D) -->
                <path d="M12 2 21 7 12 12 3 7 12 2Z" stroke="currentColor" stroke-width="1.2" fill="none"/>
                <path d="M21 7v10l-9 5-9-5V7" stroke="currentColor" stroke-width="1.2" fill="none"/>
                <path d="M12 12v10" stroke="currentColor" stroke-width="1.2"/>
            </svg>
        </span>
        <span class="bg-icon i6">
            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <!-- blesk -->
                <path d="M13 2 5 13h6l-2 9 8-11h-6l2-9Z" stroke="currentColor" stroke-width="1.2" fill="none"/>
            </svg>
        </span>
    </div>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom border-dark mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MakerslabInventory</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Domov</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Inventars" asp-action="Index">Inventár</a>
                        </li>
                        
                        <!-- TOTO JE NOVÉ: Odkaz na správu užívateľov len pre Admina -->
                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning fw-bold" asp-area="" asp-controller="Admin" asp-action="Index">Správa používateľov</a>
                            </li>
                        }
                    </ul>

                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @* Globálne flash správy *@
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Warning"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    @TempData["Warning"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-dark text-secondary mt-5 pt-3 pb-3">
        <div class="container d-flex justify-content-between align-items-center">
            <span>&copy; 2025 - MakerslabInventory</span>
            <a class="link-secondary" asp-area="" asp-controller="Home" asp-action="Privacy">Súkromie</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>